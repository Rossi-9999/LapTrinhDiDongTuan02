<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alwaysDrawnWithCache="false"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="312dp"
        android:layout_height="55dp"
        android:drawableLeft="@drawable/usb_1"
        android:text="USB bluetooth music"
        android:textColor="#0B0909"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="35dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cực kỳ hài lòng"
        android:textColor="#050505"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="143dp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="239dp"
        android:layout_height="63dp"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="204dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:drawableLeft="@drawable/camera_1"
        android:text="Thêm hình ảnh"
        android:textColor="#070606"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="304dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="283dp"
        android:layout_height="228dp"
        android:text="Chia sẻ những điều bạn thích về sản phẩm"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="378dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="198dp"
        android:layout_height="49dp"
        android:text="Gửi"
        app:backgroundTint="#2540D5"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="626dp" />

</androidx.constraintlayout.widget.ConstraintLayout>