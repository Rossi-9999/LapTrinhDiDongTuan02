<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dada"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/font"
        android:layout_width="160dp"
        android:layout_height="52dp"
        android:text="LOGIN"
        android:textColor="#0E0D0D"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.163"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.089" />

    <Button
        android:id="@+id/button2"
        android:layout_width="289dp"
        android:layout_height="64dp"
        android:text="LOGIN"
        app:backgroundTint="#150E0E"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="455dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:background="#4BFFFFFF"
        android:drawableLeft="@drawable/avatar_user_1"
        android:text="Name"
        android:textColor="#100E0E"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="198dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="300dp"
        android:layout_height="57dp"
        android:background="#4BFFFFFF"
        android:drawableLeft="@drawable/vector__1_"
        android:drawableRight="@drawable/vector__2_"
        android:text="PassWord"
        android:textColor="#0E0B0B"
        android:textSize="30dp"
        android:textStyle="bold"
        app:barrierMargin="10dp"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="309dp" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Forgot your password ?"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="551dp" />

</androidx.constraintlayout.widget.ConstraintLayout>